  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Layout\AuthenticationLayout.razor" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Pages\ContentPages\DepartmentPages\GeneralDepartmentDialog.razor" />
  </ItemGroup>

